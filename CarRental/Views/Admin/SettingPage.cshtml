@{
    Layout = "_LayoutAdmin";
}
<h1 class="None">Genel Ayarlar</h1>
<div id="gridContainer" dx-data-grid="dataGridOptions"></div>
<script type="text/javascript">
    var OrionApp = angular.module('OrionApp', ['dx'])
        .controller('OrionController', function ($scope) {
            var Url = "";
            var settingStore = new DevExpress.data.CustomStore({
                key: "Id",
                load: function () {
                    return sendRequest("/getsetting");
                },
                insert: function (values) {
                    return sendRequest("@Url.Action("OrionSave","Admin")", "POST", {
                        values: JSON.stringify(values),
                        tablo: "Setting"
                    });
                },
                update: function (key, values, tablo) {
                    return sendRequest("@Url.Action("OrionSave","Admin")", "POST", {
                        key: key,
                        values: JSON.stringify(values),
                        tablo: "Setting"
                    });
                },
                remove: function (key) {
                    return sendRequest("@Url.Action("OrionDelete","Admin")", "POST", {
                        key: key,
                        tablo: "Setting"
                    });
                }
            });
            $scope.refreshMode = "reshape";
            $scope.requests = [];

            $scope.dataGridOptions = {
                bindingOptions: {
                    "editing.refreshMode": "refreshMode"
                },
                dataSource: settingStore,
                repaintChangesOnly: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                filterRow: { visible: true },
                filterPanel: { visible: true },
                headerFilter: { visible: true },
                allowColumnResizing: true,
                columnAutoWidth: true,
                width: "100%",
                paging: {
                    pageSize: 10
                },
                columnChooser: {
                    enabled: false,
                    mode: "dragAndDrop" // or "select"
                },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [25, 50, 75],
                    showInfo: true
                },
                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    useIcons: true,
                    popup: {
                        title: "Site Ayarı",
                        showTitle: true,
                        width: "100%",
                        height: "100%",
                        position: {
                            my: "top",
                            at: "top",
                            of: window
                        }
                    },
                    form: {
                        itemType: "group",
                        width: "100%",
                        height: "100%",
                        colCount: 1,
                        items: [
                            {
                                itemType: "tabbed",
                                tabPanelOptions: {
                                    deferRendering: false,
                                    loop: true,
                                    animationEnabled: true,
                                    swipeEnabled: false
                                },
                                tabs: [
                                    {
                                        colCount: 2,
                                        title: "Bilgiler",
                                        items: [
                                            { dataField: "CompanyName" },
                                            { dataField: "ContactName" },
                                            { dataField: "Phone" },
                                            { dataField: "Mail" },
                                            { dataField: "Adress" },
                                            { dataField: "WorkTime" },
                                            { dataField: "GoogleMapUrl" },
                                            { dataField: "FooterDescription" },
                                            { dataField: "Twitter" },
                                            { dataField: "Facebook" },
                                            { dataField: "Linkedin" },
                                            { dataField: "GooglePlus" },
                                            { dataField: "Sahibinden" },
                                            { dataField: "Instagram" },
                                            { dataField: "LogoFile" },
                                            { dataField: "Logo", visible: false },
                                            { dataField: "FooterLogoFile" },
                                            { dataField: "FooterLogo", visible: false },
                                            { dataField: "MobileLogoFile" },
                                            { dataField: "MobileLogo", visible: false }
                                        ]
                                    },
                                    {
                                        colCount: 1,
                                        title: "Hakkımızda Bilgisi",
                                        items: [{ dataField: "About" }]
                                    }
                                ]
                            }]
                    }
                },
                onDataErrorOccurred(e) {
                    this.dataErrorMessage = "The server returned an error: " + `"${e.error.httpStatus} => ${e.error.message}".`;
                },
                onEditorPreparing: function (e) {

                    if (e.parentType === "dataRow" && e.dataField === "LogoFile") {
                        try {

                            e.editorName = "dxFileUploader";
                            e.editorOptions.uploadMode = "instantly";
                            e.editorOptions.name = "myFile";
                            e.editorOptions.uploadUrl = "@Url.Action("UploadFile", "Admin")";
                            e.editorOptions.onUploaded = (args) => {
                                var result = args.request.response;
                                const rowIndex = e.row.rowIndex
                                e.component.cellValue(rowIndex, "Logo", result);
                                DevExpress.ui.notify("Logonuz yüklendi", "success", 5000);
                            }
                        } catch (e) {

                        }
                    }
                    else if (e.parentType === "dataRow" && e.dataField === "FooterLogoFile") {
                        try {

                            e.editorName = "dxFileUploader";
                            e.editorOptions.uploadMode = "instantly";
                            e.editorOptions.name = "myFile";
                            e.editorOptions.uploadUrl = "@Url.Action("UploadFile", "Admin")";
                            e.editorOptions.onUploaded = (args) => {
                                var result = args.request.response;
                                const rowIndex = e.row.rowIndex
                                e.component.cellValue(rowIndex, "FooterLogo", result);
                                DevExpress.ui.notify("Logonuz yüklendi", "success", 5000);
                            }
                        } catch (e) {

                        }
                    }
                    else if (e.parentType === "dataRow" && e.dataField === "MobileLogoFile") {
                        try {

                            e.editorName = "dxFileUploader";
                            e.editorOptions.uploadMode = "instantly";
                            e.editorOptions.name = "myFile";
                            e.editorOptions.uploadUrl = "@Url.Action("UploadFile", "Admin")";
                            e.editorOptions.onUploaded = (args) => {
                                var result = args.request.response;
                                const rowIndex = e.row.rowIndex
                                e.component.cellValue(rowIndex, "MobileLogo", result);
                                DevExpress.ui.notify("Logonuz yüklendi", "success", 5000);
                            }
                        } catch (e) {

                        }
                    }
                },
                columns: [
                    {
                        dataField: "Id",
                        caption: "Kayıt No",
                        width: 100
                    },
                    {
                        dataField: "CompanyName",
                        caption: "Şirket Adı",
                        width: 450
                    },
                    {
                        dataField: "ContactName",
                        caption: "İletişim Adı"
                    },
                    {
                        dataField: "Phone",
                        caption: "Telefon"
                    },
                    {
                        dataField: "Mail",
                        caption: "E-mail"
                    },
                    {
                        dataField: "Adress",
                        caption: "Adres",
                        visible: false
                    },
                    {
                        dataField: "WorkTime",
                        caption: "Çalışma Saatleri",
                        visible: false
                    },
                    {
                        dataField: "GoogleMapUrl",
                        caption: "Google Map URL",
                        visible: false
                    },
                    {
                        dataField: "FooterDescription",
                        caption: "Footer Açıklama",
                        visible: false
                    },
                    {
                        dataField: "Facebook",
                        caption: "Facebook",
                        visible: false
                    },
                    {
                        dataField: "Sahibinden",
                        caption: "Sahibinden",
                        visible: false
                    },
                    {
                        dataField: "Instagram",
                        caption: "Instagram",
                        visible: false
                    },
                    {
                        dataField: "Twitter",
                        caption: "Twitter",
                        visible: false
                    },
                    {
                        dataField: "GooglePlus",
                        caption: "GooglePlus",
                        visible: false
                    },
                    {
                        dataField: "Linkedin",
                        caption: "Linkedin",
                        visible: false
                    },
                    {
                        dataField: "Logo",
                        caption: "Logo",
                        visible: false
                    },
                    {
                        dataField: "LogoFile",
                        caption: "Logo(108px*66px)",
                        setCellValue: function (rowData, value) {
                            rowData.Logo = value[0].name;
                            DevExpress.ui.notify(value[0].name + " başarılı bir şekilde yüklendi.", "success", 2000);
                            //rowData.File = null;
                        },
                        visible: false
                    },
                    {
                        dataField: "FooterLogo",
                        caption: "Footer Logo",
                        visible: false
                    },
                    {
                        dataField: "FooterLogoFile",
                        caption: "Footer Logo(107px*66px)",
                        setCellValue: function (rowData, value) {
                            rowData.FooterLogo = value[0].name;
                            DevExpress.ui.notify(value[0].name + " başarılı bir şekilde yüklendi.", "success", 2000);
                            //rowData.File = null;
                        },
                        visible: false
                    },
                    {
                        dataField: "MobileLogo",
                        caption: "Mobil Logo",
                        visible: false
                    },
                    {
                        dataField: "MobileLogoFile",
                        caption: "Mobil Logo(107px*66px)",
                        setCellValue: function (rowData, value) {
                            rowData.MobileLogo = value[0].name;
                            DevExpress.ui.notify(value[0].name + " başarılı bir şekilde yüklendi.", "success", 2000);
                            //rowData.File = null;
                        },
                        visible: false
                    },
                    {
                        dataField: "About", colSpan: 4, editorType: "dxHtmlEditor",
                        visible: false,
                        editorOptions: {
                            toolbar: {
                                items: [
                                    "undo", "redo", "separator",
                                    {
                                        formatName: "size",
                                        formatValues: ["8pt", "10pt", "12pt", "14pt", "18pt", "24pt", "36pt"]
                                    },
                                    {
                                        formatName: "font",
                                        formatValues: ["Arial", "Courier New", "Georgia", "Impact", "Lucida Console", "Tahoma", "Times New Roman", "Verdana"]
                                    },
                                    "separator", "bold", "italic", "strike", "underline", "separator",
                                    "alignLeft", "alignCenter", "alignRight", "alignJustify", "separator",
                                    {
                                        formatName: "header",
                                        formatValues: [false, 1, 2, 3, 4, 5]
                                    }, "separator",
                                    "orderedList", "bulletList", "separator",
                                    "color", "background", "separator",
                                    "link", "image", "separator",
                                    "clear", "codeBlock", "blockquote", "table"
                                ]
                            },
                            mediaResizing: {
                                enabled: true
                            },
                            height: 400
                        }
                    }
                ],
                onToolbarPreparing: function (e) {
                    var dataGrid = e.component;
                    e.toolbarOptions.items.unshift(
                        {
                            location: "after",
                            widget: "dxButton",
                            options: {
                                icon: "refresh",
                                text: "Yenile",
                                onClick: function () {
                                    dataGrid.refresh();
                                }
                            }
                        },
                        {
                            location: "after",
                            widget: "dxButton",
                            options: {
                                icon: "add",
                                text: "Ekle",
                                onClick: function () {
                                    dataGrid.addRow();
                                }
                            }
                        }
                    );
                },

            };

            $scope.buttonOptions = {
                text: "Clear",
                onClick: function () {
                    $scope.requests = [];
                }
            };


            function sendRequest(url, method, data) {
                var d = $.Deferred();

                method = method || "GET";

                //logRequest(method, url, data);

                $.ajax(url, {
                    method: method || "GET",
                    data: data,
                    cache: false,
                    xhrFields: { withCredentials: true }
                }).done(function (result) {
                    d.resolve(method === "GET" ? result.Data : result.Data);
                }).fail(function (xhr) {
                    d.reject(xhr.responseJSON ? xhr.responseJSON.Message : xhr.statusText);
                });

                return d.promise();
            }
        });


    DevExpress.localization.locale(navigator.language || navigator.browserLanguage);

</script>
